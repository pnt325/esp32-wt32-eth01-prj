<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="GridEye.Views.Controls.TabSub">
  <ContentView.Content>
      <StackLayout>
            <Label BindingContext="{x:Reference this}" 
                   Text="{Binding TextTitle}" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="{StaticResource colorFriwoForeground}"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>