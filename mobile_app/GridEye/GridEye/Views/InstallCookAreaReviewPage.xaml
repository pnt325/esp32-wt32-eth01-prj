<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sk="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             x:Class="GridEye.Views.InstallCookAreaReviewPage"
             xmlns:controls="clr-namespace:GridEye.Views.Controls"
             NavigationPage.HasNavigationBar="False"
             Title="Installation">
    <StackLayout>
        <controls:NavigateBarTemplate x:Name="nbar" BackTitle="Back"
                                          NextTitle="Finish"
                                          HasBack="True"
                                          BackEnable="True"
                                          HasNext="True"
                                          NextEnable="True"
                                      NextClicked="NavigateBarTemplate_NextClicked"
                                      BackClicked="NavigateBarTemplate_BackClicked"/>
        <StackLayout Padding="10, 0, 10, 10">
            <controls:InstallStep StepTitle="Step 4/4" StepDetail="Preview cook area configure"/>
            <controls:TabSub TextTitle="Cook area"/>
            <sk:SKCanvasView x:Name="cookCanvas" BackgroundColor="Gray"/>
            <controls:TabSub TextTitle="Human area"/>
            <sk:SKCanvasView x:Name="humanCanvas" BackgroundColor="Gray"/>
        </StackLayout>
    </StackLayout>
</ContentPage>